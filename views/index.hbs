    
    <section>
        <div class="conatiner mt-5">
            <div class="row">
                {{#each spots}}
                <div class="col-md-3">
                    <div class="card" style="width: 18rem;">
                        <img src="{{this.image}}"
                            class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.place}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="#" class="btn btn-primary">More about</a>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </section>



   